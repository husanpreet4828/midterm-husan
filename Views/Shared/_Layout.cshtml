<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Global Styles */
        body {
            background-color: #f9f9f9; /* Light gray background */
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        /* Navigation Bar */
        .navbar {
            background-color: #0056b3; /* Deep blue */
            border-bottom: 2px solid #003d82;
            padding: 12px 20px;
        }
        .navbar-brand {
            font-weight: bold;
            font-size: 24px;
            color: #ffffff;
        }
        .navbar-nav .nav-link {
            color: #ffffff;
            font-size: 18px;
            padding: 10px 15px;
        }
        .navbar-nav .nav-link:hover {
            background-color: #003d82;
            border-radius: 5px;
        }

        /* Jumbotron */
        .jumbotron {
            background: linear-gradient(to right, #007bff, #0056b3);
            text-align: center;
            padding: 40px 20px;
            color: #ffffff;
        }
        .jumbotron h1 {
            font-size: 36px;
            font-weight: bold;
        }

        /* Page Container */
        .container {
            padding: 40px 0;
        }

        /* Footer */
        footer {
            background-color: #0056b3;
            padding: 20px 0;
            text-align: center;
            font-size: 16px;
            color: #ffffff;
            border-top: 2px solid #003d82;
        }
        footer a {
            color: #ffffff;
            text-decoration: none;
        }
        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Student Management System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Jumbotron (Header) -->
    <div class="jumbotron">
        <h1>Welcome to the Student Management System</h1>
        <p>Manage students efficiently and track their records.</p>
    </div>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 Student Management System | All Rights Reserved</p>
            <p>Student Number: <strong>200596751</strong></p>
            <p><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
