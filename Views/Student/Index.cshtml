@model List<_200596751_Exam.Models.Student>

<h2>Student List</h2>
<a asp-action="Create">Add New Student</a>

<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@(string.IsNullOrEmpty(student.EmailAddress) ? "No Email" : student.EmailAddress)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@student.StudentId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@student.StudentId">Delete</a>
            </td>
        </tr>
    }
</table>
